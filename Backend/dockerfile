# Dockerfile V8.0 (La solución limpia)

# 1. Usamos PHP 8.0
FROM php:8.0-apache

# 2. Instalamos las dependencias del sistema y gRPC
RUN apt-get update && apt-get install -y \
    git \
    unzip \
    zlib1g-dev \
    libzip-dev \
    && pecl install grpc \
    && docker-php-ext-enable grpc \
    && rm -rf /var/lib/apt/lists/*

# 3. Activamos el módulo 'rewrite' de Apache (para que .htaccess funcione)
RUN a2enmod rewrite

# 4. ¡LA NUEVA SOLUCIÓN! Copiamos nuestra config de Apache personalizada
#    (Reemplaza el 'sed' que estaba rompiendo todo)
COPY apache-override.conf /etc/apache2/conf-available/apache-override.conf

# 5. Y la activamos
RUN a2enconf apache-override

# 6. Instalamos Composer
COPY --from=composer /usr/bin/composer /usr/bin/composer

# 7. Instalamos extensiones para MySQL
RUN docker-php-ext-install mysqli pdo pdo_mysql

# 8. Establecemos el directorio de trabajo
WORKDIR /var/www/html

# 9. Copiamos e instalamos dependencias de Composer
COPY composer.json ./
RUN composer install --no-dev --optimize-autoloader 

# 10. Copiamos el resto de la app
COPY . .

# 11. Arreglamos permisos
RUN chown -R www-data:www-data /var/www/html